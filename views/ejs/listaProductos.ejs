<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <title>Products - EJS</title>
</head>

<body>
    <div class="container">
        <h1 class="m-2">Crear Producto</h1>
        <div class="m-4">
            <form id="formProducts">
                <div class="mb-3">
                    <label for="title" class="form-label"><i><strong>Nombre</strong></i></label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label"><i><strong>Precio</strong></i></label>
                    <input type="number" min="0" step="0.01" class="form-control" id="price" name="price">
                </div>
                <div class="mb-3">
                    <label for="thumbnail" class="form-label"><i><strong>Img URL</strong></i></label>
                    <input type="text" class="form-control" id="thumbnail" name="thumbnail">
                </div>
                <button type="submit" class="btn btn-success"><strong>Crear</strong></button>
            </form>
        </div>
    </div>
    <div class="container">
        <h1 class="m-2">Lista de Productos</h1>
        <% if(listaProductos.length > 0) { %>
        <table class="table table-striped">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            <% listaProductos.forEach( prod => { %>
            <tr>
                <td><%= prod.id%></td>
                <td><%= prod.title%></td>
                <td>$ <%= prod.price%></td>
                <td><img class="images" src="<%= prod.thumbnail%>"></td>
            </tr>
            <% }) %>
        </table>
        <% } else { %>
        <div class="m-5">
            <h2>No se encontraron productos</h2>
        </div>
        <% } %>
    </div>
    <div class="container">
        <div class="card" style="width: 100%">
            <div class="card-body">
                <h5 class="card-title">Chat sobre Productos:</h5>
                <div id="messages"></div>
                <div class="container">
                    <form id="formChat">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="email">
                        </div>
                        <div class="mb-3">
                            <label for="mensaje" class="form-label">Mensaje:</label>
                            <input type="text" class="form-control" id="texto">
                        </div>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="./socket.io/socket.io.min.js"></script>
    <script src="./main.js"></script>
</body>

</html>