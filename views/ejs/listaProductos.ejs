<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <title>Products - EJS</title>
</head>

<body>
    <div class="container">
        <h1 class="m-2">Lista de Productos</h1>
        <% if(listaProductos.length > 0) { %>
        <table class="table table-striped">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            <% listaProductos.forEach( prod => { %>
            <tr>
                <td><%= prod.title%></td>
                <td>$ <%= prod.price%></td>
                <td><img class="images" src="<%= prod.thumbnail%>"></td>
            </tr>
            <% }) %>
        </table>
        <% } else { %>
        <div class="m-5">
            <h2>No se encontraron productos</h2>
        </div>
        <% } %>
    </div>
    <div class="container">
        <div class="card" style="width: 100%">
            <div class="card-body">
                <h4 class="card-title">Chat sobre Productos:</h4>
                <h5 id="compresion"></h5>
                <div id="messages"></div>
                <div class="container">
                    <form id="formChat">
                        <div class="mb-3">
                            <label for="id" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="id">
                        </div>
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre:</label>
                            <input type="text" class="form-control" id="nombre">
                        </div>
                        <div class="mb-3">
                            <label for="apellido" class="form-label">Apellido:</label>
                            <input type="text" class="form-control" id="apellido">
                        </div>
                        <div class="mb-3">
                            <label for="edad" class="form-label">Edad:</label>
                            <input type="text" class="form-control" id="edad">
                        </div>
                        <div class="mb-3">
                            <label for="alias" class="form-label">Alias:</label>
                            <input type="text" class="form-control" id="alias">
                        </div>
                        <div class="mb-3">
                            <label for="avatar" class="form-label">Avatar:</label>
                            <input type="text" class="form-control" id="avatar">
                        </div>
                        <div class="mb-3">
                            <label for="texto" class="form-label">Texto:</label>
                            <input type="text" class="form-control" id="texto">
                        </div>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="./socket.io/socket.io.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
    <script src="./main.js"></script>
</body>

</html>