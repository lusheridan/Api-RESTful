<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
    <title>Products - HBS</title>
  </head>
  <body>
    <div class="container back-grey m-3">
      <h1 class="m-2">Productos</h1>
      {{#if listaProductos}}
        <table class="table table-striped">
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
          </tr>
          {{#each listaProductos}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.title}}</td>
              <td>$ {{this.price}}</td>
              <td><img class="images" src="{{this.thumbnail}}" /></td>
            </tr>
          {{/each}}
        </table>
      {{else}}
        <div class="m-5">
          <h2>No se encontraron productos</h2>
        </div>
      {{/if}}
      <a href="/productos/create">
        <button class="btn btn-primary"><strong>Agregar Producto</strong></button>
      </a>
    </div>
  </body>
</html>